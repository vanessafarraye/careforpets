<div class="container" id="content">
	
		<h2><small class="color">Create patient</small></h2>
	
	<%= form_for @client, html: {class: "form-horizontal form-top"}  do |f| %>
			  <div class="form-group">
			    <label for="inputFirstName3" class="col-sm-2 control-label">Name</label>
		    	<div class="col-sm-10">
			    		<%= f.text_field :name, placeholder: "Name", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Age</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :age, placeholder: "Age", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Owner's name</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :owners_name, placeholder: "Owner's name", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Photo url</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :photo_url, placeholder: "Photo url", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Story</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :story, placeholder: "Story", class: "form-control" %>
			    </div>
			  </div>
			  <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Money needed</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :amount_needed, placeholder: "$", class: "form-control" %>
			    </div>
			  </div>
			    <div class="form-group">
			    <label for="inputLastName3" class="col-sm-2 control-label">Date limit</label>
			    <div class="col-sm-10">			  
			    	<%= f.text_field :date_expect, placeholder: "Money expected before...", class: "form-control" %>
			    </div>
			  </div>
            <%= f.hidden_field :user_id, value: current_user.id %>
			  	<div class="form-group">
			    <div class="col-sm-offset-2 col-sm-10">
			  		<%= f.submit "Save", class: "btn btn-default" %>
			    </div>
			  </div>
				<% end %>    
	    </div>
	  </div>
	</div>
</div>